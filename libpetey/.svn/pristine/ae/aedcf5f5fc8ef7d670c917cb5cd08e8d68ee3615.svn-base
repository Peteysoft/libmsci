#ifndef ROOTS_MINS_H_INCLUDED
#define ROOTS_MINS_H_INCLUDED 1

namespace libpetey {

  //root-finding function which brackets the root
  //and interpolates between the two brackets:
  template <class real>
  real root_false_position(void (*funcd) (real, void *, real *),
		void *params,	//function parameters
                real x1,	//first bracket
		real x2,	//second bracket
		real xtol,	//desired (absolute) tolerance
		real ytol,
		long maxiter,	//maximum number of iterations
		int &err,	//returns number of iterations
		real &y1,	//to avoid redundant calculation
		real y2);

  template <class real>
  inline real root_false_position(void (*funcd) (real, void *, real *),
		void *params,	//function parameters
                real x1,	//first bracket
		real x2,	//second bracket
		real xtol,	//desired (absolute) tolerance
		real ytol,
		long maxiter,	//maximum number of iterations
		int &err)	//returns number of iterations
  {

    real y1, y2, dydx1, dydx2;

    (*funcd) (x1, params, &y1, &dydx1);
    (*funcd) (x2, params, &y2, &dydx2);

    return root_false_position(funcd, params, x1, x2, xtol, ytol, maxiter, err,
		  y1, y2);
  }

}

#endif

