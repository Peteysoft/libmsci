#ifndef SC_FUNC__H
#define SC_FUNC__H

#include "sc_type.h"

class sc_sub_t {
  public:
    virtual ~sc_sub_t()=0;
    virtual sc_t * call(int narg, sc_t **args)=0;

};

class sc_func_t:public sc_sub_t {
  public:
    sc_func_t(sc_t * (*fp) (int, sc_t **));
    ~sc_func_t();
    virtual sc_t * call(int narg, sc_t **args);
};

class sc_user_t:public sc_sub_t {
  public:
    sc_user_t(char *filename);
    ~sc_user_t();
    virtual sc_t * call(int narg, sc_t **args);
};

#endif

